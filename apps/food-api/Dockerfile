# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build food-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 8080:8080 -t food-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=8080
EXPOSE ${PORT}

WORKDIR /app

RUN addgroup --system food-api && \
          adduser --system -G food-api food-api

COPY dist/apps/food-api food-api
RUN rm food-api/package-lock.json
RUN chown -R food-api:food-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix food-api --omit=dev -f install
RUN npm install pg swagger-ui-express

CMD [ "node", "food-api" ]
